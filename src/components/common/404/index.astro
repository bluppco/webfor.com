---

// IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

// IMPORT ASTRO ATOMS
import ButtonPrimary from "@/atoms/buttons/primary/index.astro"
import Link from "@/atoms/links/index.astro"

---
<section class="grow h-full w-full py-20 md:pt-40 flex flex-col justify-center items-center">
    <Container>
        <div class="space-y-10">
            <p class="text-3xl md:text-7xl uppercase text-center tracking-wider">404 - Page not found</p>
            <div class="md:w-[70%] mx-auto">
                <p class="text-lg md:text-xl text-center tracking-wide">Looks like you've ventured into uncharted territory. Don't worry; even the best explorers take a wrong turn now and then. Let's get you back on track.</p>
            </div>
            <div class="flex justify-center">
                <Link href="/" aria_label="Go to home page">
                    <ButtonPrimary>Go to home page</ButtonPrimary>
                </Link>
            </div>
        </div>
    </Container>
</section>

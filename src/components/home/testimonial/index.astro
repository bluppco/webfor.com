---

//IMPORT ASTRO LAYOUTS
import Container from "@/layouts/container/index.astro"

//IMPORT ASTRO COMPONENTS
import TestimonialUserCard from "@/components/home/testimonial/testimonial-user-card/index.astro"

//IMPORT ASTRO ATOMS
import ButtonWhite from "@/atoms/atoms-diksha/buttons/white/index.astro"
import HeadingFourThreeXlSemiboldPrimary from "@/atoms/atoms-diksha/headings/four/3xl/semibold/primary/index.astro"
import HeadingFourThreeXlSemiboldUppercaseCenterWhite from "@/atoms/atoms-diksha/headings/four/3xl/semibold/uppercase/center/white/index.astro"
import Link from "@/atoms/links/index.astro"
import ParagraphBoldUppercaseWhite from "@/atoms/atoms-diksha/paragraphs/bold/uppercase/white/index.astro"
import ParagraphLgSemiboldPrimary from "@/atoms/atoms-diksha/paragraphs/lg/semibold/primary/index.astro"
import ParagraphXlItalicLeftSlate500 from "@/atoms/atoms-diksha/paragraphs/xl/italic/left/slate-500/index.astro"
import Picture from "@/atoms/picture/internal/index.astro"

//GET ASTRO PROPS
const { isRight } = Astro.props

//CONSTANTS
const display_content = {
    title: "WE HELP PEOPLE. THAT MEANS YOU, TOO. GET IN TOUCH FOR A FREE CONSULTATION AND DISCOVERY SESSION.",
    button_text: "Get Started",
    text: "360.550.9578"
}

const testimonial_content = {
    testimonial: "“…team go above and beyond for our account. We appreciate the support they give, as well as the knowledge they pass on to us and our business. They acknowledge points that truly affect our business. Thank you!”"
}

---

<Container>
    <div class={`flex flex-col lg:flex-row`}>
        <div class="bg-color-primary bg-light-radial-gradient w-full lg:w-1/2 px-16 py-40 flex flex-col items-center justify-center gap-6">
            <div class="w-14 aspect-square">
                <Picture
                    alternative_text="email"
                    source="/images/icon-email.svg"
                />
            </div>
            <HeadingFourThreeXlSemiboldUppercaseCenterWhite>{ display_content.title }</HeadingFourThreeXlSemiboldUppercaseCenterWhite>
            <div class="flex flex-row justify-center items-center gap-6">
                <Link
                    aria_label="get started"
                    source="/"
                >
                    <ButtonWhite>{ display_content.button_text }</ButtonWhite>
                </Link>
                <ParagraphBoldUppercaseWhite>{ display_content.text }</ParagraphBoldUppercaseWhite>
            </div>
        </div>
        <div class={`bg-color-tertiary w-full lg:w-1/2 px-12 py-40 flex flex-col justify-center ${isRight ? "items-start" : "items-center"} gap-6 ${isRight ? "text-left" : "text-center"}`}>
            <!-- testimonial -->
             <HeadingFourThreeXlSemiboldPrimary>Our Marketing Customers And Partners Tell It Like It Is.</HeadingFourThreeXlSemiboldPrimary>
             <ParagraphXlItalicLeftSlate500>{ testimonial_content.testimonial }</ParagraphXlItalicLeftSlate500>
             <TestimonialUserCard/>
             <Link
                aria_label="read more testimonials"
                source="/"
            >
                <ParagraphLgSemiboldPrimary>Read more stories and checkout some case studies.</ParagraphLgSemiboldPrimary>
            </Link>
        </div>
    </div>
</Container>
